@page "{id}"
@model eticaret.Pages.Admin.EditModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ürün Düzenle</title>
    <link rel="stylesheet" href="~/css/site.css">
</head>
<body>
    <header>
       
    </header>
    <main>
        <h2>Ürün Düzenle</h2>
        <form method="post">
            <div>
                <label for="Name">Ürün Adı</label>
                <input type="text" id="Name" name="Name" value="@Model.Product.Name" required />
            </div>
            <div>
                <label for="Price">Fiyat</label>
                <input type="number" id="Price" name="Price" step="0.01" value="@Model.Product.Price" required />
            </div>
            <div>
                <label for="Description">Açıklama</label>
                <textarea id="Description" name="Description">@Model.Product.Description</textarea>
            </div>
            <div>
                <label for="Stock">Stok</label>
                <input type="number" id="Stock" name="Stock" value="@Model.Product.Stock" required />
            </div>
            <div>
                <label for="ImageUrl">Resim URL</label>
                <input type="text" id="ImageUrl" name="ImageUrl" value="@Model.Product.ImageUrl" />
            </div>
            <button type="submit">Güncelle</button>
        </form>
    </main>
    <footer>
       
    </footer>
</body>
</html>
