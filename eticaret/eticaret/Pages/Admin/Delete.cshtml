@page
@model eticaret.Pages.Admin.DeleteModel
@{
    ViewData["Title"] = "Ürünü Sil";
}

<h1>Ürünü Sil</h1>

<h3>@Model.Product.Name ürününü silmek istediğinize emin misiniz?</h3>

<form method="post">
    <input type="hidden" asp-for="Product.Id" />
    <button type="submit" class="btn btn-danger">Sil</button>
    <a asp-page="/Admin/Dashboard" class="btn btn-secondary">İptal</a>
</form>
