@page
@model eticaret.Pages.Admin.AddProductModel
@{
    ViewData["Title"] = "Yeni Ürün Ekle";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css">
</head>
<body>
    <header>
        <div class="header-container">
            <div class="logo">
                <a href="/">My E-Commerce</a>
            </div>
            <div class="user-actions">
                <a href="/Account/Logout">Çıkış Yap</a>
            </div>
        </div>
    </header>
    <main>
        <h1>Yeni Ürün Ekle</h1>
        <form method="post">
            <div>
                <label for="name">Ürün Adı</label>
                <input type="text" id="name" name="Name" />
            </div>
            <div>
                <label for="price">Fiyat</label>
                <input type="text" id="price" name="Price" />
            </div>
            <div>
                <label for="stock">Stok</label>
                <input type="number" id="stock" name="Stock" />
            </div>
            <div>
                <label for="description">Açıklama</label>
                <textarea id="description" name="Description"></textarea>
            </div>
            <div>
                <label for="imageUrl">Resim URL</label>
                <input type="text" id="imageUrl" name="ImageUrl" />
            </div>
            <button type="submit">Ekle</button>
        </form>
    </main>
    <footer>
        <div class="footer-container">
            <p>© 2024 My E-Commerce. Tüm hakları saklıdır.</p>
        </div>
    </footer>
</body>
</html>
